
[[doctype spellcast/book]]

[entity-model character]
	usage-types:
		- melee-fighting
		- ranged-fighting

	params:
		xp-reward: 10

	slots:
		hand: 2
		ring: 2
		body: 1

	stats:
		# Global stats
		strength: 12
		dexterity: 14
		quickness: 15
		resilience: 12
		arcane: 18
		
		# Skills stats
		skills:
			fighting: 3
			shooting: 1

		status:
			health: 100

		usages:
			melee-fighting:
				attack: $$= ( ( $dexterity + $quickness ) / 2 ) + $skills.fighting
				defense: $$= ( ( $dexterity + $quickness ) / 2 ) + $skills.fighting
				damage: $$= $strength + $skills.fighting


[item-model charm-of-protection]
	class: object
	name: charm of protection
	passive-mods:
		resilience: (+) 1
		usages.melee-fighting.defense: (+) 1

[item-model ring-of-power]
	class: object
	name: ring of power
	slot-type: ring
	slot-count: 1
	active-mods:
		strength: (+) 3
		resilience: (+) 2

[item-model bastard-sword]
	class: object
	name: bastard sword
	slot-type: hand
	slot-count: 1
	usages-mods:
		melee-fighting:
			primary:
				attack: (+) 5
				defense: (+) 4
				damage: (+) 5
			extra-slot:
				attack: (+) 1
				defense: (+) 1
				damage: (+) 4
			support:
				attack: (+) 1
				defense: (+) 1

[item-model main-gauche]
	class: object
	name: main gauche
	slot-type: hand
	slot-count: 1
	usages-mods:
		melee-fighting:
			primary:
				attack: (+) 2
				defense: (+) 3
				damage: (+) 2
			support:
				attack: (+) 1
				defense: (+) 3


[chapter a-chapter]
	[starting-scene a-scene]
		[create-entity $entity] character
		#[debug] $entity
		[to-unit-test base-entity] $entity

		[create-item $ring] ring-of-power
		#[debug] $ring
		[to-unit-test ring] $ring
		
		[create-item $charm] charm-of-protection
		#[debug] $charm
		[to-unit-test charm] $charm
		
		[create-item $bastard-sword] bastard-sword
		#[debug] $bastard-sword
		[to-unit-test bastard-sword] $bastard-sword
		
		[create-item $main-gauche] main-gauche
		#[debug] $main-gauche
		[to-unit-test main-gauche] $main-gauche
		
		[equip $entity]
			owned: no
			item: $ring
		
		#[debug] $entity
		[to-unit-test entity-ring-equipped] $entity
		
		[unequip $entity]
			item: $ring
		
		#[debug] $entity
		[to-unit-test entity-ring-unequipped] $entity
		
		[equip $entity]
			owned: no
			item: $bastard-sword
		
		#[debug] $entity
		[to-unit-test entity-bastard-sword-equipped] $entity
		
		[unequip $entity]
			item: $bastard-sword
		
		#[debug] $entity
		[to-unit-test entity-bastard-sword-unequipped] $entity

		[equip $entity]
			item: $bastard-sword
		
		#[debug] $entity
		[to-unit-test entity-bastard-sword-re-equipped] $entity

		[equip $entity]
			owned: no
			item: $main-gauche
		
		#[debug] $entity
		[to-unit-test entity-bastard-sword-and-main-gauche-equipped] $entity

		[grab $entity]
			from: null
			item: $charm
		
		#[debug] $entity
		[to-unit-test entity-after-charm] $entity

		[equip $entity]
			item: $charm
		
		#[debug] $entity
		[to-unit-test entity-after-trying-to-equip-charm] $entity


		[drop $entity]
			into: null
			item: $charm
		
		#[debug] $entity
		[to-unit-test entity-after-dropping-charm] $entity

		[unequip $entity]
			item: $bastard-sword
		
		#[debug] $entity
		[to-unit-test entity-main-gauche-only] $entity

