
[[doctype spellcaster]]

[formula]
	value: 1

[spell if-elseif-else]
	[if $value > 4]
		[message]
			- > Condition #1 if
	[else]
		[message]
			- > Condition #1 else
	
	[if $value > 4]
		[message]
			- > Condition #2 if
	[elsif $value > 2]
		[message]
			- > Condition #2 elsif
	[elseif $value > 1]
		[message]
			- > Condition #2 elseif
	[else]
		[message]
			- > Condition #2 else

