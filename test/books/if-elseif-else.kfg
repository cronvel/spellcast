
[[doctype spellcast/spellbook]]

[formula]
	value: 1

[spell if-elseif-else]
	[if $value > 4]
		[message]
			- > Condition #0 if
	
	[if $value > 4]
		[message]
			- > Condition #1 if
	[else]
		[message]
			- > Condition #1 else
	
	[if $value > 4]
		[message]
			- > Condition #2 if
	[elsif $value > 2]
		[message]
			- > Condition #2 elsif
	[elseif $value > 1]
		[message]
			- > Condition #2 elseif
	[else]
		[message]
			- > Condition #2 else

	[select $value]
	[if > 4]
		[message]
			- > Condition #3 if
	[elsif > 2]
		[message]
			- > Condition #3 elsif
	[elseif > 1]
		[message]
			- > Condition #3 elseif
	[else]
		[message]
			- > Condition #3 else

	[select $value + 2]
	[if > 4]
		[message]
			- > Condition #4 if
	[elsif > 2]
		[message]
			- > Condition #4 elsif
	[elseif > 1]
		[message]
			- > Condition #4 elseif
	[else]
		[message]
			- > Condition #4 else

