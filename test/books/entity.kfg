
[[doctype spellcast/book]]

[entity-model character]
	usage-types:
		- melee-fighting
		- ranged-fighting

	params:
		xp-reward: 10

	slots:
		hand: 2
		ring: 2
		body: 1

	stats:
		# Global stats
		strength: 12
		dexterity: 14
		quickness: 15
		resilience: 12
		arcane: 18
		
		# Skills stats
		skills:
			fighting: 1
			shooting: 1

		status:
			health: 100


[item-model ring-of-power]
	class: object
	name: ring of power
	slot-type: ring
	slot-count: 1
	active-mods:
		strength: (+) 3
		resilience: (+) 2


[chapter a-chapter]
	[starting-scene a-scene]
		[create-entity $entity] character
		#[debug] $entity
		[to-unit-test base-entity] $entity

		[create-item $ring] ring-of-power
		#[debug] $ring
		[to-unit-test ring] $ring
		
		[equip $entity]
			item: $ring
		
		#[debug] $entity
		[to-unit-test entity-with-ring] $entity
		

