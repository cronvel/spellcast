
[[doctype spellcast/spellbook]]

[spell event]
	[on blast]
		[global]
		[off]
		[message]
			$> Blasted ${args}!
		[success]

	[on blast]
		[global]
		[off]
		[message]
			$> Roasted ${args}!

	[emit blast => $cancel] Troll
	[message] $> $$cancel: ${cancel}

	[on blast]
		[global]
		[off]
		[message]
			$> Blasted ${args}!
		[failure]

	[on blast]
		[global]
		[off]
		[message]
			$> Roasted ${args}!

	[emit blast => $cancel] Gnoll
	[message] $> $$cancel: ${cancel}
