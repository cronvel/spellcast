
[[doctype spellcast/spellbook]]

[spell event]
	[on blast]
		[global]
		[off]
		[message]
			$> Blasted ${args}!
		[success]

	[on blast]
		[global]
		[off]
		[message]
			$> Roasted ${args}!

	[emit blast] Troll
	[on-success]
		[message] $> 1: Success!
	[on-failure]
		[message] $> 1: Failure!

	[on blast2]
		[global]
		[off]
		[message]
			$> Blasted ${args}!
		[failure]

	[on blast2]
		[global]
		[off]
		[message]
			$> Roasted ${args}!

	[emit blast2] Gnoll
	[on-success]
		[message] $> 2: Success!
	[on-failure]
		[message] $> 2: Failure!

	[on blast3]
		[global]
		[off]
		[message]
			$> Blasted ${args}!
		[cancel]

	[on blast3]
		[global]
		[off]
		[message]
			$> Roasted ${args}!

	[emit blast3] Giant Rat
	[on-success]
		[message] $> 3: Success!
	[on-failure]
		[message] $> 3: Failure!


	[on blast4]
		[global]
		[off]
		[message]
			$> Blasted ${args}!

	[on blast4]
		[global]
