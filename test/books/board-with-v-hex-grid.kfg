
[[doctype spellcast/book]]

[board-model hex-board]
	groups:
		main:
			type: v-hex-grid
			type-params:
				odd: yes
	create-places:
		group: main
		range:
			x:
				min: -3
				max: 3
			y:
				min: -3
				max: 3

[chapter a-chapter]
	[starting-scene a-scene]
		[create-board $board] hex-board
		[to-unit-test board] $board

