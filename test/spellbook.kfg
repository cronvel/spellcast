
[formula]
	alert: bob
	blah: blih
	allcaps: FUUU
	list:
		- one
		- two
		- three
	list-fr:
		- un
		- deux
		- trois
	version: 0.1.2

[spell echo]
	[scroll]
		- echo echo

[spell delayed-echo]
	[scroll]
		- sleep 1
		- echo delayed-echo

[spell ls]
	[scroll]
		- ls -l

[spell kawarimi]
	[scroll]
		- echo ${alert} ${blah}${blah} ${list}

[spell depend]
	[cast]
		- blah
	[summon]
		- dependency.txt
	[scroll]
		- echo Dependencies should be rebuilt

[summoning spellcast-dependency.txt]
	[scroll]
		- echo Creating spellcast-dependency.txt
		- echo "This is a dummy dependency file." > spellcast-dependency.txt

[summoning regex(i): .*\.bob]
	[scroll]
		# Kung-Fig should allow another feature in proxy/tag: force filtering in template?
		- $> echo Creating ${summoning}
		- $> echo "This is a dummy dependency file." > ${summoning}

