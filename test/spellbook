
formula
	alert:bob
	blah:blih
	list:one,two,three



.echo
	sh
		echo echo

.delayed-echo
	sh
		sleep 1
		echo delayed-echo

.kawarimi
	sh
		echo ${alert} ${blah}${blah} ${list}

.foreach
	foreach list
		sh
			echo one more time: ${list}

	sh
		echo end: ${list}






.editor
	sh
		$EDITOR

.node
	sh
		node

.stdinout
	sh
		./stdinout










.depend
	cast
		blah
	summon
		dependency.txt
	sh
		echo Dependencies should be rebuilt

:spellcast-dependency.txt
	sh
		echo Creating spellcast-dependency.txt
		echo "This is a dummy dependency file." > spellcast-dependency.txt

.fireball
	sh parallel:2
		echo Zap Boum
		echo Zashhhh && sleep 1 && echo Crash
		echo Fizz

.nova
	sh
		echo Grrrrjjjjj grrrrrjjjjj grrrrjjjj
		exit
		echo flash
		exit 2
		echo bang





