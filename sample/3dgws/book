					y: -1
				size:
					x: 15
					y: 15
				position: 
					x: 30

			[g-create sprite druidess2]
				texture-pack: shaman
				origin:
					y: -1
				size:
					xy: 15
				position: 
					z: 15

			[pause] 0.5
			
			[pause] 0.5
			[camera await]
				transition: 1.5
				position: 
					x: 60
					z: -60
			[camera await]
				transition: 1
				roll: 10
				position: 
					x: -60
					z: -60
			[camera await]
				transition: 1
				roll: -10
				position: 
					x: -60
					z: 60
			[camera await]
				transition: 1
				roll: 0
				position: 
