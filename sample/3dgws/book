
[[doctype spellcast/book]]
[[extension 3dgws]]



[chapter menu]
	[scene menu]
		[next camera/camera-test] Camera test
		[next card/card-test] Card test



[vg-template card]
	[attr]
		viewbox:
			x: 0
			y: 0
			width: 400
			height: 600

	[font-pack serif]
		regular: /fonts/serif.ttf

	# The card border
	[vg-rect]
		x: 0
		y: 0
		r: 10
		width: 400
		height: 600
		style:
			stroke: #444
			fill: #fff

	# The image
	[vg-image]
		x: 20
		y: 320
		width: 360
		height: 260
		aspect: preserve
		url: /sprites/shaman.png

	# The image rectangle
	[vg-rect]
		x: 20
		y: 320
		r: 5
		width: 360
		height: 260
		style:
			stroke: #444
			fill: none

	# The text rectangle
	[vg-rect]
		x: 20
		y: 20
		r: 5
		width: 360
		height: 260
		style:
			stroke: #444
			fill: #6d6

	# The text
	[vg-flowing-text]
		x: 25
		y: 25
		width: 350
		height: 250
		text-wrapping: wordwrap
		attr:
			font-size: 24
			color: #000
			outline: yes
		markup-text:
			>> **This** is a placeholder text, it should contain the card description,
			>> its rules description, and eventually it's lore.



[vg-template card-back]
	[attr]
		viewbox:
			x: 0
			y: 0
			width: 400
			height: 600

	# The card border
	[vg-rect]
		x: 0
		y: 0
		r: 10
		width: 400
		height: 600
		style:
			stroke: #444
			fill: #fff

	# The image
	[vg-image]
		x: 20
		y: 20
		width: 360
		height: 560
		aspect: stretch
		url: /textures/card-back.png



[chapter card]
	[theme] > /themes/game

	[starting-scene card-test]
		[create-g-scene 3d]
			engineId: 3dgws
			active: yes
			catch:
				message: yes
				choices: yes

		[g-scene 3d]
			[texture-pack background] /textures/background.jpg
			[texture-pack ground] /textures/grass-rock-ground.jpg

			[camera]
				mode: positions
				position: 
					y: 10
					z: -40
				target:
					x: 0
					y: 10
					z: 0
		
			[g-create hemispheric-light hemi-light]
				light:
					ground:
						r: 0.2
						g: 0
						b: 0
					intensity: 1.2

			[g-create background background]
				texture-pack: background
				origin:
					y: -0.25

			[g-create ground ground]
				texture-pack: ground

			#[call card/layout => $.vg]
			[vg-instance card => $.vg]
			[vg-instance card-back => $.back-vg]
			[g-create card card]
				vg-object: $.vg
				back-vg-object: $.back-vg
				special:
					vg-pixel-density: 500
				size:
					xy: 10
				origin:
					y: -1
				position:
					x: 0
					y: 0
					z: 0

			[camera]
				free: true

		[pause] 5

		[next]


[chapter camera]
	[theme] > /themes/game

	[scene camera-test]
		[message] $> ^/Once upon a time...
		
		[create-g-scene 3d]
			engineId: 3dgws
			active: yes
			catch:
				message: yes
				choices: yes

		[g-scene 3d]
			[texture-pack background] /textures/background.jpg
			[texture-pack ground] /textures/grass-rock-ground.jpg
			[texture-pack shaman] /sprites/shaman.png
			[texture-pack mage]
				variants:
					default: /sprites/mage.png
					mentoring: /sprites/mage-mentoring.png

			[camera]
				mode: positions
				position: 
					y: 10
					z: -40
				target:
					x: 0
					y: 10
					z: 0
		
			[g-create hemispheric-light hemi-light]
				light:
					ground:
						r: 0.2
						g: 0
						b: 0
					intensity: 1.2

			[g-create background background]
				texture-pack: background
				origin:
					y: -0.25

			[g-create ground ground]
				texture-pack: ground

			[g-create sprite mage]
				texture-pack: mage
				#variant: mentoring
				origin:
					y: -1
				size:
					x: 20
					y: 20

			[g-create sprite druidess]
				texture-pack: shaman
				origin:
					y: -1
				size:
					x: 15
					y: 15
				position: 
					x: 30

			[g-create sprite druidess2]
				texture-pack: shaman
				origin:
					y: -1
				size:
					xy: 15
				position: 
					z: 15

			[pause] 0.5
			
			[pause] 0.5
			[camera await]
				transition: 1.5
				position: 
					x: 60
					z: -60
			[camera await]
				transition: 1
				roll: 10
				position: 
					x: -60
					z: -60
			[camera await]
				transition: 1
				roll: -10
				position: 
					x: -60
					z: 60
			[camera await]
				transition: 1
				roll: 0
				position: 
					x: 60
					z: 60
			[camera await]
				transition: 1
				position: 
					x: 60
					z: -60
			[camera await]
				transition: 1
				position: 
					x: 0
					y: 60
					z: -10
			[camera await]
				transition: 1
				position: 
					x: 0
					y: 10
					z: -30
			[camera await]
				transition: 1
				roll: 30

			[g-update druidess2 await]
				transition: 1
				position: 
					x: 12

			[g-update druidess2 await]
				transition: 1
				position: 
					x: -8

			[g-update mage]
				variant: mentoring

		[next first-person]

	[scene first-person]
		[g-scene 3d]
			[camera]
				mode: firstPerson
				position:
					y: 10
					z: -40
				yaw: 0
				pitch: 0
				roll: 0
		
			[pause 1]
			[camera await]
				transition: 1
				yaw: 50
			[camera await]
				transition: 1
				pitch: -20
			[camera await]
				transition: 1
				roll: -20

		[next]

