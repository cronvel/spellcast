
[[doctype adventure]]

[action drink]
	[message]
		$> You drink a cup of vine...

[entity-model player]
	[label] human
	[stats]
		strength: 12
		ability: 14
	[status]
		hp: 20

[entity-model guardian]
	[label] the guardian
	[stats]
		strength: 12
		ability: 14
	[status]
		hp: 20

[role hero]
	[label] You
	[entity] player



[chapter intro]
	[scene intro]
		[subscene battle/init]
			[this]
				foes:
					- guardian



[chapter battle]
	[scene init]
		[entity $this.enemy] $this.foes[0]
		



