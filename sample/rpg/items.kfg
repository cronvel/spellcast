				compound:
					attack: (+) 25
					aiming: (+) 8
					damages: (+) 18
		
		# This is the stats of the weapon when it is used at melee distance,
		# the opponent can parry before the weapon is triggered, therefore
		# the attack is greatly reduced.
		melee:
			primary:
				params:
					reload: true
					criticalHitFlavour: $$> ^r${attacker.label//uc1} pierces ${defender.label} for ${damages} hp.
					fatalHitFlavour: $$> ^r${attacker.label//uc1} impales ${defender.label} for ${damages} hp.
				compound:
					attack: (+) 6
					damages: (+) 18

