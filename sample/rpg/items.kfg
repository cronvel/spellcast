[item-model shield]
	class: object
	label: shield
	slotType: hand
	slotCount: 1
	usages:
		melee:
			support:
				compound:
					defense: (+) 4
			# When used as primary, the wielder is basicaly hiding behind it
			primary:
				compound:
					attack: (+) -2
					defense: (+) 9
					damages: (+) 2
		missile:
			support:
				params:
					coverFlavour: $$> ${defender.label//uc1}'s shield prevents from ${attacker.label}'s ${missile}.
				compound:
					defense: (+) 12
					cover: (+) 12



