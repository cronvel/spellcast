			# Bonuses when the weapon is held with both hands (i.e. taking advantage of an extra empty slot of the same kind)
			extraSlot:
				compound:
					attack: (+) 3
					defense: (+) 3
					damages: (+) 6
			# Bonuses when the weapon is used as a support for the primary weapon
			support:
				compound:
