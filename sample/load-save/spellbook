
[[doctype adventurer]]



[chapter intro]
	
	[scene intro1]
		[message]
			$> Choose your background:
		
		[set $character] <Object>
		
		[next intro2]
			[label] $> Warrior
			[on-trigger]
				[set $global.class] warrior
				[set $character.class] warrior
		[next intro2]
			[label] $> Rogue
			[on-trigger]
				[set $global.class] rogue
				[set $character.class] rogue
		[next intro2]
			[label] $> Mage
			[on-trigger]
				[set $global.class] mage
				[set $character.class] mage
	
	[scene intro2]
		[message]
			$> Load/save scenario:

		[next var-check] $> Var check
		[next pause] $> Pause

	[scene var-check]
		[message]
			$> You are a ${global.class}(global) ${character.class}(var).



