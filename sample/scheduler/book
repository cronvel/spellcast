
[[doctype spellcast/book]]



[entity-model entity]
	class: entity
	label: Entity



[chapter intro]
	
	[scene intro1]
		
		[create-entity $alice]
			model: entity
			label: Alice
		
		[create-entity $bob]
			model: entity
			label: Bob
		
		[create-scheduler $scheduler]
		
		[add-to-scheduler $scheduler]
			entity: $alice
			readyingDuration: 10
		
		[add-to-scheduler $scheduler]
			entity: $bob
			readyingDuration: 8
		
		[on $scheduler ready]
			[message] $> Received the ^/ready^ event for: ${args.entity.label}
			#[debug] $args
		
		#[debug] $scheduler
		
		[advance-scheduler $scheduler]
		
		[pause] 1