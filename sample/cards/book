
[[doctype spellcast/book]]
#[[assets ./]]

[chapter intro]
	
	[scene intro]
		[set $cards] <Array>
		[goto new-card]
		
	[scene new-card]
		
		[set $card] $> card${cards.length}
		[append $cards] $card
		
		[show-card $card]
			url: /sprites/shaman.png
			backUrl: /textures/card-back.png
			location: hand
			status:
				face: down
			content:
				title: $> The Druidess
				description:
					$> The Druidess is a great support unit, that can heal and boost allies.
			imageStyle:
				backgroundSize: contain
		
		[goto choice]
		
	[scene choice]
		
		[message] $> Select your animation choice.
		
		[next next-card] $> next card
		[next down] $> face down
		[next up] $> up
		[next spin-up] $> spin face up
		[next wheel-up] $> wheel face up
		[next new-card] $> new card
		
	[scene next-card]
		[set $local.index] $= ( ( $cards.indexOf -> $card ) + 1 ) % $cards.length
		[set $card] $cards[$local.index]
		
		[goto choice]
		
	[scene down]
		
		[update-card $card]
			location: hand
			status:
				face: down
		
		[goto choice]
		
	[scene up]
		
		[update-card $card]
			location: showing
			status:
				face: up
		
		[goto choice]
	
	[scene spin-up]
		
		[update-card $card]
			location: showing
			status:
				face: spin-up
		
		[goto choice]
	
	[scene wheel-up]
		
		[update-card $card]
			location: showing
			status:
				face: wheel-up
		
		[goto choice]
	
	[scene wheel-up2]
		
		[update-card $card]
			location: showing
			status:
				face: wheel-up2
		
		[goto choice]
	
