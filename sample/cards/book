[chapter intro]
	
	[scene intro]
		
		[show-card my-card]
			url: /sprites/shaman.png
			backUrl: /textures/card-back.png
			location: hand
			status:
				face: down
			content:
				title: $> The Druidess
				description:
					$> The Druidess is a great support unit, that can heal and boost allies.
			imageStyle:
				backgroundSize: contain
		
		[goto choice]
		
	[scene choice]
		
		[message] $> Select your animation choice.
		
		[next down] $> face down
		[next up] $> up
		[next spin-up] $> spin face up
		[next wheel-up] $> wheel face up
		
	[scene down]
		
		[update-card my-card]
			location: hand
			status:
				face: down
		
		[goto choice]
		
	[scene up]
		
		[update-card my-card]
			location: showing
			status:
				face: up
		
		[goto choice]
	
	[scene spin-up]
		
		[update-card my-card]
			location: showing
			status:
				face: spin-up
		
		[goto choice]
	
	[scene wheel-up]
		
		[update-card my-card]
			location: showing
			status:
				face: wheel-up
		
		[goto choice]
	
	[scene wheel-up2]
		
		[update-card my-card]
			location: showing
			status:
				face: wheel-up2
		
		[goto choice]
	
